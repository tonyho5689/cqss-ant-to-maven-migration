            </dependency>
            <dependency>
                <groupId>com.cqss</groupId>
                <artifactId>cqss-svr</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.cqss</groupId>
                <artifactId>cqss-ear</artifactId>
                <version>${project.version}</version>
                <type>ear</type>
            </dependency>
            
            <!-- Apache Commons Dependencies -->
            <dependency>
                <groupId>commons-logging</groupId>
