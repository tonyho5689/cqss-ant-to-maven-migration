                <artifactId>cyber-util-common-for-was</artifactId>
                <version>${custom.lib.version}</version>
            </dependency>
            <dependency>
                <groupId>com.custom</groupId>
                <artifactId>cyber-util-tools-for-was</artifactId>
                <version>${custom.lib.version}</version>
            </dependency>
            <dependency>
                <groupId>com.custom</groupId>
                <artifactId>cyber-util-for-was</artifactId>
                <version>${custom.lib.version}</version>
            </dependency>
            
            <!-- CyberUtil Libraries - Standalone/Batch -->
            <dependency>
                <groupId>com.custom</groupId>
                <artifactId>cyber-util</artifactId>
                <version>${custom.lib.version}</version>
