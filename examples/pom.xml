        <commons.lang.version>2.4</commons.lang.version>
        <commons.chain.version>1.2</commons.chain.version>
        <commons.validator.version>1.3.1</commons.validator.version>
        <commons.httpclient.version>3.1</commons.httpclient.version>
        <commons.configuration.version>1.5</commons.configuration.version>
        
        <!-- Logging versions -->
        <log4j.version>1.2.14</log4j.version>
        <slf4j.version>1.6.1</slf4j.version>
        
        <!-- Spring and related versions -->
        <spring.version>2.5.5</spring.version>
        <aspectj.version>1.6.1</aspectj.version>
        <antlr.version>2.7.6</antlr.version>
        
        <!-- Database and ORM versions -->
        <ibatis.version>2.3.0.677</ibatis.version>
        <oracle.version>12.2.0.1</oracle.version>
        <c3p0.version>0.9.2.1</c3p0.version>
        <mchange.commons.version>0.2.3.4</mchange.commons.version>
        
        <!-- Other third-party versions -->
        <jaxb.version>2.3.0</jaxb.version>
        <jsr173.version>1.0</jsr173.version>
        <activation.version>1.1.1</activation.version>
        <jsch.version>0.1.54</jsch.version>
        <struts.version>1.2.9</struts.version>
        <jakarta.oro.version>2.0.8</jakarta.oro.version>
        
        <!-- WebSphere version -->
        <was.version>9.0</was.version>
        
        <!-- Internal library version -->
        <custom.lib.version>1.0</custom.lib.version>
    </properties>

    <repositories>
        <repository>
            <id>local-maven-repo</id>
            <url>file:///${project.basedir}/cqss-repo/repository</url>
        </repository>
    </repositories>

